<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joeygale.napapp.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnSeeNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTakeANap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="@string/btnSeeNotes"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="420dp" />

        <Button
            android:id="@+id/btnTakeANap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="@string/txtTakeNap"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="312dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            app:srcCompat="@drawable/nap"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="93dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/txtTitle"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
